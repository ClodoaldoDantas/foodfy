{% extends "layout/admin.njk" %}

{% block content %}
  <section class="page-detail">
    <div class="page-detail__action">
      <h2>Receita: {{ recipe.title }}</h2>
      <a class="button" href="/admin/recipes/{{recipe.id}}/edit">
        Editar receita
      </a>
    </div>

    <header class="page-detail__header">
      <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
      <h1>{{ recipe.title }}</h1>
      <span>por {{ recipe.author }}</span>
    </header>

    <div class="page-detail__content">
      <div>
        <h3>Ingredientes</h3>
      </div>
      
      <ul id="ingredients">    
        {% for ingredient in recipe.ingredients %}
          <li>{{ ingredient }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="page-detail__content">
      <div>
        <h3>Modo de preparo</h3>
      </div>
      <ul id="preparation">    
        {% for item in recipe.preparation %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>

    {% if recipe.information %}
      <div class="page-detail__content">
        <div>
          <h3>Informações adicionais</h3>
        </div>
        <p id="information">{{ recipe.information }}</p>
      </div>
    {% endif %}
  </section>
{% endblock %}