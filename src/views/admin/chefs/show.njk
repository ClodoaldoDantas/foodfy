{% extends "layout/admin.njk" %}

{% block content %}
  <section class="detail">
    <div class="detail__action">
      <h2>Chef: {{ chef.name }}</h2>
      <a class="btn" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
    </div>

    <header class="detail__chef">
      <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
      <h1>{{ chef.name }}</h1>
      {% if chef.total_recipes > 0 %}
        <span>{{ chef.total_recipes }} receitas</span>
      {% else %}
        <span>sem receitas</span>
      {% endif %}
    </header>

    {% if recipes.length > 0 %}
      <div class="detail__content">
        <div class="detail__heading">
          <h3>Receitas</h3>
        </div>
        <div class="grid" style="padding-top: 1rem;">
          {% for recipe in recipes %}
            <div class="item">
              <div style="background-image: url({{ recipe.image }})"></div>
              <div class="item__content">
                <h3>{{ recipe.title }}</h3>
                <span>por {{ recipe.author }}</span>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
              </div>
            </div>
          {% endfor %}
        </div>  
      </div>
    {% endif %}

  </section>
{% endblock %}