{% extends "layout/admin.njk" %}

{% block content %}
  <section class="admin-home">
    <h1>Gerenciar receitas</h1>

    <div class="grid">
      {% for recipe in recipes %}
        <div class="item">
          <div style="background-image: url({{ recipe.image }})"></div>
          <div class="item__content">
            <h3>{{ recipe.title }}</h3>
            <span>por {{ recipe.author }}</span>
            <a href="/admin/recipes/{{loop.index0}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="admin-footer">
      <a class="btn" href="/admin/recipes/create">Nova receita</a>
    </div>
    
  </section>
{% endblock %}